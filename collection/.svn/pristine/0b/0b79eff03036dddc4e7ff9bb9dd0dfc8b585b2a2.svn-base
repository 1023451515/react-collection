        //   });
        // }
      },

      // 选择批次案件，跳转到案件详情页
      batchCollection() {
        if(!this.selected) {
          this.$alert("未选择案件！", "提示", {
            confirmButtonText: "确定",
            type: 'warning'
          });
          return false;
        }
        let id = this.$util.encrypt(this.selected, 'caseDetail');
        let url = window.location.origin + '/#/worker_case_detail?id=' + id;
        window.open(url)
      }
    }

  }

</script>

